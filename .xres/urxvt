! geometry
URxvt.geometry: 80x25

! cursor
URxvt.cursorBlink:	true
URxvt.cursorUnderline:	1


! borders
!URxvt*externalBorder:     0
URxvt*internalBorder:     20
URxvt*borderLess: false

! transparancy
urxvt*transparent: true
urxvt*shading: 30

! font
!URxvt.letterSpace:	-3
URxvt.font:	    xft:DejaVu Sans Mono:size=12
!URxvt.font:	    xft:monaco:size=11

! scrollbar
URxvt.scrollBar:    false


!PLUGINS:
URxvt.perl-ext-common:	resize-font,vtwheel,matcher

! resize font
URxvt.keysym.A-equal:	resize-font:bigger
URxvt.keysym.A-minus:	resize-font:smaller
URxvt.keysym.A-plus:	resize-font:reset

! matcher
! to set the default web browser to firefox run "xdg-settings set default-web-browser firefox.desktop"
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
